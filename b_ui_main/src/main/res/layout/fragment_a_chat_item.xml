<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/contact_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/jf_touxiang1" />

    <TextView
        android:id="@+id/contact_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/contact_item_icon"
        android:text="联系人"
        android:textColor="@color/public_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_item_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/contact_item_icon"
        android:text="888888"
        android:textColor="@color/public_color_4A4A4A"
        android:textSize="16sp" />

    <View
        android:id="@+id/contact_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:background="@color/public_color_E5E5E5" />

</RelativeLayout>